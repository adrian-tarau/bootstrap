<?xml version="1.0" encoding="ISO-8859-1"?>
<assets xmlns="https://net.microfalx/xsd/asset-1.0.xsd">

    <!-- Fonts  -->
    <asset-bundle id="glyphs" version="6.4.0" name="Various stylesheets with fonts used for glyphs">
        <asset path="font-awesome/regular.css" type="stylesheet"/>
        <asset path="font-awesome/solid.css" type="stylesheet"/>
        <asset path="font-awesome/fontawesome.css" type="stylesheet"/>
        <asset path="font-awesome/brands.css" type="stylesheet"/>
        <asset path="themify/themify.css" type="stylesheet"/>
    </asset-bundle>

    <!-- jQuery  -->
    <asset-bundle id="jquery" path="jquery" version="3.7.0" name="JQuery">
        <asset path="jquery.js" type="script"/>
        <asset path="jquery-migrate.js" type="script"/>

        <asset path="jquery-ui.js" type="script"/>
        <asset path="jquery-ui.css" type="stylesheet"/>

        <asset path="jquery.datetimepicker.js" type="script"/>
        <asset path="jquery.datetimepicker.css" type="stylesheet"/>

        <asset path="jquery.form.js" type="script"/>
        <asset path="jquery.sparkline.js" type="stylesheet"/>
    </asset-bundle>

    <asset-bundle id="misc" path="misc" version="1.0.0" name="Miscellaneous">
        <depends-on-asset-bundle>jquery</depends-on-asset-bundle>

        <asset path="pace.js" type="script"/>
        <asset path="pace-theme-minimal.css" type="stylesheet"/>

        <asset path="dropzone.js" type="script"/>
        <asset path="dropzone.css" type="stylesheet"/>

        <asset path="iziToast.js" type="script"/>
        <asset path="iziToast.css" type="stylesheet"/>

        <asset path="moment.js" type="script"/>

        <asset path="daterangepicker.js" type="script"/>
        <asset path="daterangepicker.css" type="stylesheet"/>
    </asset-bundle>

    <!-- Bootstrap  -->
    <asset-bundle id="bootstrap" path="bootstrap" version="5.3.0" name="Bootstrap">
        <depends-on-asset-bundle>jquery</depends-on-asset-bundle>
        <depends-on-asset-bundle>misc</depends-on-asset-bundle>
        <depends-on-asset-bundle>glyphs</depends-on-asset-bundle>

        <asset path="popper.js" type="script"/>
        <asset path="bootstrap.js" type="script"/>
        <asset path="tooltip.js" type="script"/>
        <asset path="bootstrap.css" type="stylesheet"/>
    </asset-bundle>

    <asset-bundle id="loader" path="misc" version="1.0.0" name="Loader" inline="true">
        <asset path="loader.js" type="script"/>
        <asset path="loader.css" type="stylesheet"/>
    </asset-bundle>

    <!-- Adminator Theme  -->
    <asset-bundle id="adminator" path="adminator" version="2.0.0" name="Adminator" theme="Adminator">
        <depends-on-asset-bundle>bootstrap</depends-on-asset-bundle>

        <asset path="adminator.js" type="script"/>
        <asset path="adminator.css" type="stylesheet"/>
    </asset-bundle>


</assets>